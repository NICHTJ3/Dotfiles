{
    "description": "My tmux config",
    "links": [
        {
            "from": "./config/tmux/helper-scripts/*",
            "to": "~/bin/helper-scripts",
            "glob": true
        },
        {
            "from": "./config/tmux/powerline/*",
            "to": "~/.config/powerline/",
            "glob": true
        },
        {
            "from": "./config/tmux/tmux.conf",
            "to": "~/.tmux.conf"
        }
    ],
    "packages": [
        "tmux"
    ],
    "shell": [
        "git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm"
    ],
    "revert_shell": ["rm -r ~/.tmux/plugins/tpm"]
}
