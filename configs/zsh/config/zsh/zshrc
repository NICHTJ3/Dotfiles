# ZSHRC
#
#
# If not running interactively, don't do anything
case $- in
    *i*) ;;
    *) return;;
esac


##################
# Setup
##################
# fnm
eval "$(fnm env --use-on-cd)"

# TODO: Setup dissabling this with a single variable instead of commenting it out
# base16
# [ -n "$PS1" ] && \
#     [ -s "$BASE16_SHELL/profile_helper.sh" ] && \
#     eval "$("$BASE16_SHELL/profile_helper.sh")"


##################
# Enable Powerlevel10k instant prompt.
##################
# To customize prompt, run `p10k configure`
[[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]] && \
    source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"

# Source normal prompt if on windows or in a DM
if [[ $DISPLAY || $WSL_ACTIVE || "$(uname -s)" == "Darwin" ]]; then
    [[ ! -f ~/.config/zsh/p10k.zsh ]] || source ~/.config/zsh/p10k.zsh
    # Else source a prompt without icons
else
    [[ "$(expr ${$(uname -s)[1,5]})" == "Linux" ]] && . $HOME/bin/helper-scripts/dracula-tty.sh
    [[ ! -f ~/.config/zsh/p10k-portable.zsh ]] || source ~/.config/zsh/p10k-portable.zsh
fi

##################
# ZGEN
##################
source "${HOME}/bin/helper-scripts/zgen.zsh"

if ! zgen saved; then
    zgen oh-my-zsh

    zgen oh-my-zsh plugins/z
    zgen oh-my-zsh plugins/git
    zgen oh-my-zsh plugins/docker
    zgen oh-my-zsh plugins/docker-compose
    zgen oh-my-zsh plugins/history-substring-search
    zgen oh-my-zsh plugins/colored-man-pages

    zgen load romkatv/powerlevel10k powerlevel10k

    zgen load zsh-users/zsh-syntax-highlighting
    zgen load zsh-users/zsh-completions src

    zgen save
fi

##################
# Other scripts
##################
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

##################
# Completion
##################
compdef _tmux tmux-manager
compdef _tmux tmux

##################
# User config
##################
# Enable Vi mode
bindkey -v
export KEYTIMEOUT=1

# Make CTRL-Z background things and unbackground them.
function fg-bg() {
    if [[ $#BUFFER -eq 0 ]]; then
        fg
    else
        zle push-input
    fi
}
zle -N fg-bg
bindkey '^Z' fg-bg

# CTRL-Q quits the terminal
function quit() {
    exit
}
zle -N quit
bindkey '^Q' quit

# History search
bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

# Home End and Delete
bindkey '^[OH' beginning-of-line
bindkey '^[OF' end-of-line
bindkey '^[[3~' delete-char

# Ctrl x ctrl x opens vi with current command
autoload -Uz compinit; compinit
autoload -U edit-command-line
zle -N edit-command-line
bindkey '^x^x' edit-command-line


# tabtab source for packages
# uninstall by removing these lines
[[ -f ~/.config/tabtab/zsh/__tabtab.zsh ]] && . ~/.config/tabtab/zsh/__tabtab.zsh || true

[[ -s "$HOME/.gvm/scripts/gvm" ]] && source "$HOME/.gvm/scripts/gvm"

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

